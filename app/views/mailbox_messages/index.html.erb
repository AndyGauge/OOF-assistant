<p id="notice"><%= notice %></p>

<h1>Mailbox Messages</h1>

<table>
  <thead>
    <tr>
      <th>Mailbox</th>
      <th>Message</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mailbox_messages.each do |mailbox_message| %>
      <tr>
        <td><%= mailbox_message.mailbox_id %></td>
        <td><%= mailbox_message.message_id %></td>
        <td><%= link_to 'Show', mailbox_message %></td>
        <td><%= link_to 'Edit', edit_mailbox_message_path(mailbox_message) %></td>
        <td><%= link_to 'Destroy', mailbox_message, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

